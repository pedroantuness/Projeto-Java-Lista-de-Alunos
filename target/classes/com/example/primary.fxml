<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="360.0" prefWidth="432.0" spacing="20.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.PrimaryController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <HBox prefHeight="0.0" prefWidth="223.0" spacing="42.0">
         <children>
            <TextField fx:id="txtNome" onAction="#adicionarAluno" promptText="Nome do Aluno" />
            <Button mnemonicParsing="false" onAction="#adicionarAluno" text="Adicionar" />
            <Button mnemonicParsing="false" onAction="#apagarAluno" text="Apagar" />
         </children>
      </HBox>
      <ListView fx:id="lstAlunos" prefHeight="200.0" prefWidth="200.0" />
      <HBox alignment="CENTER" prefHeight="38.0" prefWidth="262.0" spacing="10.0">
         <children>
            <RadioButton fx:id="rdbCrescente" mnemonicParsing="false" onAction="#mostrarAluno" selected="true" text="Ordem Crescente">
               <toggleGroup>
                  <ToggleGroup fx:id="ordem" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="rdbDecrescente" mnemonicParsing="false" onAction="#mostrarAluno" text="Oredem Decrescente" toggleGroup="$ordem" />
         </children>
      </HBox>
   </children>
</VBox>
